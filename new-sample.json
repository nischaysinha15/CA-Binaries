{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "array"
    },
    "vmLocation": {
      "type": "string"
    },
    "LicenseCode": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('vmName')[copyIndex()],'/QualysAgentLinux')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "location": "[parameters('vmLocation')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "publisher": "Qualys",
        "type": "QualysAgentLinux",
        "typeHandlerVersion": "1.6",
        "autoUpgradeMinorVersion": false,
        "settings": {
          "LicenseCode": "[parameters('LicenseCode')]",
          "ResourceID": "/subscriptions/9964e9f0-2262-4eb5-8f87-e0325c8931c0/resourceGroups/defender-trial-rg/providers/Microsoft.Compute/virtualMachines/test-3",
          "VmRegion": "centralus"
        }
      },
      "copy": {
        "name": "vmCopy",
        "count": "[length(parameters('vmName'))]"
      }
    }
  ]
}
